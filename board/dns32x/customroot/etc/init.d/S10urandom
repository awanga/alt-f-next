#!/bin/sh
#
# urandom: This script saves the random seed between reboots.

NAME=urandom
TYPE=required

RDIR=/var/lib/seedrng
RFILE=$RDIR/seed.credit

. /etc/init.d/common

if ! test -d $RDIR; then mkdir -p $RDIR; fi

case "$1" in
	start)
		echo -n "Starting $NAME: "
		# Load and then save 512 bytes, which is the size of the entropy pool
		loadsave_settings -gr
		if test -s $RFILE; then
			#cat $RFILE > /dev/urandom
			seedrng --seed-dir=$RDIR
		else
			logger -st urandom "Missing random-seed"
		fi

		dd if=/dev/urandom of=$RFILE count=1 >& /dev/null
		chmod og-rwx $RFILE
		loadsave_settings -sr
		echo "OK."
		;;

	stop)
		echo -n "Stopping $NAME: "
		# Carry a random seed from shut-down to start-up;
		dd if=/dev/urandom of=$RFILE count=1 >& /dev/null
		chmod og-rwx $RFILE
		loadsave_settings -sr
		echo "OK."
		;;

	status)
		if test -f $RFILE; then
			echo "$NAME started"
		else
			echo "$NAME stopped"
			exit 1
		fi
		;;

	restart) restart $NAME ;;
	*)  usage $0 "start|stop|status|restart" ;;
esac
